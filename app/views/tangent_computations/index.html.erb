<p id="notice"><%= notice %></p>

<h1>Tangent Computations</h1>

<table>
  <thead>
    <tr>
      <th>Point</th>
      <th>Expression</th>
      <th>Result</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tangent_computations.each do |tangent_computation| %>
      <tr>
        <td><%= tangent_computation.point %></td>
        <td><%= tangent_computation.expression %></td>
        <td><%= tangent_computation.result %></td>
        <td><%= link_to 'Show', tangent_computation %></td>
        <td><%= link_to 'Edit', edit_tangent_computation_path(tangent_computation) %></td>
        <td><%= link_to 'Destroy', tangent_computation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

